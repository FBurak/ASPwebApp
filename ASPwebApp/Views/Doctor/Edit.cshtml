@model EditDoctorModel
@{
    ViewData["Title"] = "Edit Doctor";
}

<div class="row">
    <div class="col">
        <h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"] </h1>
    </div>
</div>

<div class="row">
    <div class="col-4 offset-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class=" text-danger small"></div>

            <div class="form-group mb-3">
                <label asp-for="FullName" class="form-label">Full Name</label>
                <input asp-for="FullName" class=" form-control" placeholder="name surname" />
                <span asp-validation-for="FullName" class="text-danger small"> </span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label">Username</label>
                <input asp-for="Username" class=" form-control" placeholder="typehere" />
                <span asp-validation-for="Username" class="text-danger small"> </span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Major" class="form-group">Role</label>
                <select asp-for="Major" class="form-select">
                    <option value="">Please Select</option>
                    <option value="kbb">KBB</option>
                    <option value="cildiye">Cildiye</option>
                    <option value="psikiyatri">Psikiyatri</option>
                </select>
                <span asp-validation-for="Major" class="text-danger small"> </span>
            </div>


            <div class="forn-group mb-3">
                <button type="submit" class="btn btn-primary"><i class="fa-solid fa-save me-2"></i>Save</button>
            </div>
        </form>
    </div>
</div>