@model List<DoctorModel>
@{
    ViewData["Title"] = "Doctors";
}
<div class="row">
    <div class="col">
        <h1 class="display-4">@ViewData["Title"]</h1>
    </div>
</div>


<div class="row mb-3">
    <div class="col">
        <a asp-action="Create" class="btn btn-primary btn-sm"><i class="fa fa-plus me-2"></i>New Doctor</a>
    </div>
</div>


<div class="row mb-3">
    <div class="col">
        <table class="table table-hover table-sm">
            <thead>
                <tr>
                    <th>FullName</th>
                    <th>Username</th>
                    <th>Major</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (DoctorModel user in Model)
                {
                    <tr>
                        <td>@user.FullName</td>
                        <td>@user.Username</td>                      
                        <td>@user.Major</td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-info btn-sm text-white"><i class="fa fa-edit me-2"></i>Edit</a>
                            <a asp-action="Delete" asp-route-id="@user.Id" onclick="return confirm('Are you sure want to delete this user :  @user.Username ?')" 
                            class="btn btn-danger btn-sm"><i class="fa fa-trash me-2"></i>Remove</a>
                        </td>
                    </tr>
                }
              
            </tbody>
        </table>
    </div>
</div>