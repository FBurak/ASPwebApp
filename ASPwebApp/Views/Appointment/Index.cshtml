@model IEnumerable<Appointment>

<h2>Appointment List</h2>
<a href="/Appointment/Create" class="btn btn-primary">Add Appointment</a>
<hr />
<table class="table table-bordered">
    <thead>
        <tr>
            <th >@Html.DisplayNameFor(m => m.AppId)</th>
            <th>@Html.DisplayNameFor(m => m.Title)</th>
            <th style="width: 150px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.AppId)</td>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AppId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.AppId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
