@model IEnumerable<ASPwebApp.Models.PoliklinikViewModel>

<h2>Randevu Al</h2>

@foreach (var poliklinik in Model)
{
    <div>
        <h4>@poliklinik.PoliklinikAdi</h4>

        <p><strong>Doktorlar:</strong></p>
        <ul>
            @foreach (var doktor in poliklinik.Doktorlar)
            {
                <li>
                    @doktor.DoktorAdi - Uzmanlık Alanı: @doktor.UzmanlikAlani
                    <form asp-controller="Home" asp-action="RandevuAl" method="post">
                        <input type="hidden" name="doktorId" value="@doktor.Id" />
                        <input type="datetime-local" name="randevuTarihi" required />
                        <button type="submit">Randevu Al</button>
                    </form>
                </li>
            }
        </ul>
    </div>
}
